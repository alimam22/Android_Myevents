<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="149dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/listImg"
            android:layout_width="140dp"
            android:layout_height="136dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cevin"
            app:shapeAppearanceOverlay="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/listTitle"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/listImg"
            android:fontFamily="@font/arya"
            android:text="Titulo"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/listdescricao"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/listTitle"
            android:fontFamily="@font/arya_bold"
            android:text="Descrição"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>